{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "sourceMap": true,
    "jsx": "react-native",
    "lib": [
      "es6"
    ],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "strict": true,
    "noUnusedLocals": true,
    "module": "commonjs",
    "target": "es2017",
    "skipLibCheck": true,
    "baseUrl": "./src"
  },
  "exclude": [
    "node_modules",
    "src/sensors/health/**/*.ts*",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "creds-generator"
  ]
}